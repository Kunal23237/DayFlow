{
    "info": {
        "name": "Dayflow HRMS - Employee",
        "description": "Employee self-service collection for Dayflow HRMS. Allows employees to view profile, mark attendance, and apply for leaves.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Auth",
            "item": [
                {
                    "name": "Sign In (Employee)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john.doe@dayflow.com\",\n  \"password\": \"Employee@123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/signin",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "signin"
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Profile (User)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/me",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. My Profile",
            "item": [
                {
                    "name": "View My Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "employees",
                                "profile"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Personal Details",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"9876543210\",\n  \"address\": {\n    \"street\": \"456 Employee Lane\",\n    \"city\": \"Mumbai\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "employees",
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "3. My Attendance",
            "item": [
                {
                    "name": "Check In",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"location\": {\n    \"latitude\": 19.0760,\n    \"longitude\": 72.8777\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/check-in",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "attendance",
                                "check-in"
                            ]
                        }
                    }
                },
                {
                    "name": "Check Out",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"location\": {\n    \"latitude\": 19.0760,\n    \"longitude\": 72.8777\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/check-out",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "attendance",
                                "check-out"
                            ]
                        }
                    }
                },
                {
                    "name": "View My Attendance",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/my-attendance?view=monthly",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "attendance",
                                "my-attendance"
                            ],
                            "query": [
                                {
                                    "key": "view",
                                    "value": "monthly"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "4. My Leaves",
            "item": [
                {
                    "name": "Apply for Leave",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"leaveType\": \"Paid\",\n  \"startDate\": \"2026-02-10\",\n  \"endDate\": \"2026-02-12\",\n  \"reason\": \"Personal Leave\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/leaves/apply",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "leaves",
                                "apply"
                            ]
                        }
                    }
                },
                {
                    "name": "View Leave Balance",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/leaves/balance",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "leaves",
                                "balance"
                            ]
                        }
                    }
                },
                {
                    "name": "My Leave Requests",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/leaves/my-leaves",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "leaves",
                                "my-leaves"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "5. My Payroll",
            "item": [
                {
                    "name": "View Payslips",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/payroll/my-payroll",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "payroll",
                                "my-payroll"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "6. Dashboard",
            "item": [
                {
                    "name": "Employee Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/dashboard/employee",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "dashboard",
                                "employee"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}